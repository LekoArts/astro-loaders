import "../global.css"

const seo = {
	title: 'Astro Loaders by LekoArts',
	description: "Need to pull in content using Astro's content layer? Reach for one of the provided loaders and stop dealing with complicated third-party APIs.",
	url: 'https://astro-loaders.lekoarts.de',
	image: 'https://astro-loaders.lekoarts.de/og.png'
}
